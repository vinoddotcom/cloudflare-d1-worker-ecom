{
    "name": "ecommerce-api-cloudflare",
    "version": "1.0.0",
    "description": "Enterprise E-commerce API on Cloudflare Workers with D1",
    "main": "dist/index.js",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler publish",
        "deploy:staging": "wrangler publish --env staging",
        "deploy:prod": "wrangler publish --env production",
        "build": "tsc",
        "test": "jest",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint src --ext .ts",
        "migrate": "wrangler d1 migrations apply DB",
        "migrate:dev": "wrangler d1 migrations apply DB --env dev",
        "migrate:staging": "wrangler d1 migrations apply DB --env staging",
        "migrate:prod": "wrangler d1 migrations apply DB --env production",
        "setup": "./setup.sh",
        "setup:env": "./set-env.sh"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "firebase-admin": "^12.0.0",
        "itty-router": "^4.0.25",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.8.7",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "wrangler": "^4.30.0"
    }
}
